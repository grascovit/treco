<div class="columns is-mobile is-centered">
  <div class="column is-narrow">
    <figure class="image logo">
      <%= image_tag('logo.png', class: 'logo-image') %>
    </figure>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'label' %>
        <div class="control">
          <%= f.email_field :email, class: 'input', required: true, autofocus: true, autocomplete: 'email', placeholder: 'john@doe.com' %>
        </div>
      </div>
      <div class="field">
        <%= f.label :password, class: 'label' %>
        <div class="control">
          <%= f.password_field :password, class: 'input', required: true, autocomplete: 'current-password' %>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'checkbox' %>
        </div>
      <% end %>
      <div class="field">
        <div class="control">
          <%= f.submit t('.login'), class: 'button is-primary is-fullwidth' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render 'devise/shared/links' %>
