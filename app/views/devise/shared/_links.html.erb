<div class="mt-5">
  <%- if controller_name != 'sessions' %>
    <div class="buttons is-centered mb-1">
      <%= link_to t('.login'), new_session_path(resource_name), class: 'button is-link is-small is-outlined' %>
    </div>
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="buttons is-centered mb-1">
      <%= link_to t('.sign_up'), new_registration_path(resource_name), class: 'button is-link is-small is-outlined' %>
    </div>
  <% end %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="buttons is-centered mb-1">
      <%= link_to t('.forgot_password'), new_password_path(resource_name), class: 'button is-link is-small is-outlined' %>
    </div>
  <% end %>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="buttons is-centered mb-1">
      <%= link_to t('.confirmation_email'), new_confirmation_path(resource_name), class: 'button is-link is-small is-outlined' %>
    </div>
  <% end %>
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <div class="buttons is-centered mb-1">
        <%= link_to t('.oauth', provider: OmniAuth::Utils.camelize(provider)),
                    omniauth_authorize_path(resource_name, provider),
                    class: 'button is-link is-small is-outlined' %>
      </div>
    <% end %>
  <% end %>
</div>
