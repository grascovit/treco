<div class="columns is-mobile is-centered">
  <div class="column">
    <div class="columns">
      <% @listings.find_each do |listing| %>
        <%= link_to listing_path(listing) do %>
          <div class="column">
            <div class="card">
              <div class="card-image">
                <figure class="image">
                  <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                </figure>
              </div>
              <div class="card-content">
                <div class="media">
                  <div class="media-content">
                    <p class="title is-4"><%= listing.title %></p>
                    <p class="subtitle is-5"><%= number_to_currency(listing.price) %></p>
                  </div>
                </div>
                <div class="content has-text-justified">
                  <p>
                    <%= listing.description %>
                  </p>
                  <time><%= listing.created_at.strftime('%d/%m/%Y %H:%M') %></time>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
